{
    // Appearance Settings
    "workbench.colorTheme": "One Dark Pro Flat",
    "workbench.iconTheme": "material-icon-theme",
    "workbench.productIconTheme": "fluent-icons",
    "workbench.sideBar.location": "left",
    "workbench.startupEditor": "none",
    "window.menuBarVisibility": "toggle",
    "window.newWindowDimensions": "inherit",
    "editor.minimap.enabled": false,
    "editor.lineNumbers": "off",
    "editor.guides.indentation": false,
    "editor.copyWithSyntaxHighlighting": false,
    "editor.fontFamily": "JetBrainsMono Nerd Font",
    "editor.fontWeight": "bold",
    "terminal.integrated.fontFamily": "JetBrainsMono Nerd Font Mono",
    "vscode_custom_css.imports": [
        "https://raw.githubusercontent.com/BramKelchtermans/vscode-settings/main/vscode.css"
    ],
    // Editor Behavior
    "editor.formatOnSave": true,
    "editor.codeActionsOnSave": {
        "source.fixAll": "explicit",
        "source.organizeImports": "explicit",
        "source.sortImports": "explicit"
    },
    "editor.snippetSuggestions": "top",
    "editor.emptySelectionClipboard": false,
    "files.trimTrailingWhitespace": true,
    "files.trimFinalNewlines": true,
    "diffEditor.ignoreTrimWhitespace": false,
    // Git Settings
    "git.confirmSync": false,
    "git.enableSmartCommit": true,
    "git.autofetch": true,
    // Breadcrumbs
    "breadcrumbs.enabled": false,
    "breadcrumbs.filePath": "on",
    // Remote SSH Settings
    "remote.SSH.useLocalServer": false,
    "remote.SSH.remotePlatform": {
        "bram-comedykit-frontend.dev.bramkelchtermans.be": "linux",
        "bram-comedykit-backend.dev.bramkelchtermans.be": "linux",
        "daan-comedykit-backend.dev.bramkelchtermans.be": "linux",
        "daan-comedykit-frontend.dev.bramkelchtermans.be": "linux",
        "llm-recruiter-api.dev.bramkelchtermans.be": "linux"
    },
    // Language-Specific Formatter Settings
    "[php]": {
        "editor.defaultFormatter": "DEVSENSE.phptools-vscode"
    },
    "[typescriptreact]": {
        "editor.defaultFormatter": "esbenp.prettier-vscode"
    },
    "[scss]": {
        "editor.defaultFormatter": "esbenp.prettier-vscode"
    },
    "[jsonc]": {
        "editor.defaultFormatter": "vscode.json-language-features"
    },
    "[html]": {
        "editor.defaultFormatter": "esbenp.prettier-vscode"
    },
    // Token Color Customizations
    "editor.tokenColorCustomizations": {
        "[One Dark Pro Flat]": {
            "comments": "#75715E", // Comments - Gray
            "keywords": "#F92672", // Keywords - Pink
            "functions": "#A6E22E", // Functions - Green
            "strings": "#E6DB74", // Strings - Yellow
            "variables": "#F8F8F2", // Variables - White
            "numbers": "#AE81FF", // Numbers - Purple
            "types": "#66D9EF", // Types - Cyan
            "textMateRules": [
                {
                    "settings": {
                        "foreground": "#F8F8F2"
                    }
                },
                {
                    "scope": [
                        "meta.embedded",
                        "source.groovy.embedded",
                        "string meta.image.inline.markdown",
                        "variable.legacy.builtin.python"
                    ],
                    "settings": {
                        "foreground": "#F8F8F2"
                    }
                },
                {
                    "name": "Comment",
                    "scope": "comment",
                    "settings": {
                        "foreground": "#75715E" // Gray
                    }
                },
                {
                    "name": "String",
                    "scope": "string",
                    "settings": {
                        "foreground": "#E6DB74" // Yellow
                    }
                },
                {
                    "name": "Template Definition",
                    "scope": [
                        "punctuation.definition.template-expression",
                        "punctuation.section.embedded"
                    ],
                    "settings": {
                        "foreground": "#F92672" // Pink
                    }
                },
                {
                    "name": "Reset JavaScript string interpolation expression",
                    "scope": [
                        "meta.template.expression"
                    ],
                    "settings": {
                        "foreground": "#F8F8F2" // White
                    }
                },
                {
                    "name": "Number",
                    "scope": "constant.numeric",
                    "settings": {
                        "foreground": "#AE81FF" // Purple
                    }
                },
                {
                    "name": "Built-in constant",
                    "scope": "constant.language",
                    "settings": {
                        "foreground": "#AE81FF" // Purple
                    }
                },
                {
                    "name": "User-defined constant",
                    "scope": "constant.character, constant.other",
                    "settings": {
                        "foreground": "#AE81FF" // Purple
                    }
                },
                {
                    "name": "Variable",
                    "scope": "variable",
                    "settings": {
                        "fontStyle": "",
                        "foreground": "#F8F8F2" // White
                    }
                },
                {
                    "name": "Keyword",
                    "scope": "keyword",
                    "settings": {
                        "foreground": "#F92672" // Pink
                    }
                },
                {
                    "name": "Storage",
                    "scope": "storage",
                    "settings": {
                        "fontStyle": "",
                        "foreground": "#F92672" // Pink
                    }
                },
                {
                    "name": "Storage type",
                    "scope": "storage.type",
                    "settings": {
                        "fontStyle": "italic",
                        "foreground": "#66D9EF" // Cyan
                    }
                },
                {
                    "name": "Class name",
                    "scope": "entity.name.type, entity.name.class, entity.name.namespace, entity.name.scope-resolution",
                    "settings": {
                        "fontStyle": "underline",
                        "foreground": "#A6E22E" // Green
                    }
                },
                {
                    "name": "Inherited class",
                    "scope": "entity.other.inherited-class",
                    "settings": {
                        "fontStyle": "italic underline",
                        "foreground": "#A6E22E" // Green
                    }
                },
                {
                    "name": "Function name",
                    "scope": "entity.name.function",
                    "settings": {
                        "fontStyle": "",
                        "foreground": "#A6E22E" // Green
                    }
                },
                {
                    "name": "Function argument",
                    "scope": "variable.parameter",
                    "settings": {
                        "fontStyle": "italic",
                        "foreground": "#FD971F" // Orange
                    }
                },
                {
                    "name": "Tag name",
                    "scope": "entity.name.tag",
                    "settings": {
                        "fontStyle": "",
                        "foreground": "#F92672" // Pink
                    }
                },
                {
                    "name": "Tag attribute",
                    "scope": "entity.other.attribute-name",
                    "settings": {
                        "fontStyle": "",
                        "foreground": "#A6E22E" // Green
                    }
                },
                {
                    "name": "Library function",
                    "scope": "support.function",
                    "settings": {
                        "fontStyle": "",
                        "foreground": "#66D9EF" // Cyan
                    }
                },
                {
                    "name": "Library constant",
                    "scope": "support.constant",
                    "settings": {
                        "fontStyle": "",
                        "foreground": "#66D9EF" // Cyan
                    }
                },
                {
                    "name": "Library class/type",
                    "scope": "support.type, support.class",
                    "settings": {
                        "fontStyle": "italic",
                        "foreground": "#66D9EF" // Cyan
                    }
                },
                {
                    "name": "Library variable",
                    "scope": "support.other.variable",
                    "settings": {
                        "fontStyle": ""
                    }
                },
                {
                    "name": "Invalid",
                    "scope": "invalid",
                    "settings": {
                        "fontStyle": "",
                        "foreground": "#F44747" // Red
                    }
                },
                {
                    "name": "Invalid deprecated",
                    "scope": "invalid.deprecated",
                    "settings": {
                        "foreground": "#F44747" // Red
                    }
                },
                {
                    "name": "JSON String",
                    "scope": "meta.structure.dictionary.json string.quoted.double.json",
                    "settings": {
                        "foreground": "#E6DB74" // Yellow
                    }
                },
                {
                    "name": "diff.header",
                    "scope": "meta.diff, meta.diff.header",
                    "settings": {
                        "foreground": "#75715E" // Gray
                    }
                },
                {
                    "name": "diff.deleted",
                    "scope": "markup.deleted",
                    "settings": {
                        "foreground": "#F92672" // Pink
                    }
                },
                {
                    "name": "diff.inserted",
                    "scope": "markup.inserted",
                    "settings": {
                        "foreground": "#A6E22E" // Green
                    }
                },
                {
                    "name": "diff.changed",
                    "scope": "markup.changed",
                    "settings": {
                        "foreground": "#E6DB74" // Yellow
                    }
                },
                {
                    "name": "brackethighlighter.tag",
                    "scope": "brackethighlighter.tag",
                    "settings": {
                        "foreground": "#F92672" // Pink
                    }
                },
                {
                    "name": "brackethighlighter.curly",
                    "scope": "brackethighlighter.curly",
                    "settings": {
                        "foreground": "#FD971F" // Orange
                    }
                },
                {
                    "name": "brackethighlighter.round",
                    "scope": "brackethighlighter.round",
                    "settings": {
                        "foreground": "#A6E22E" // Green
                    }
                },
                {
                    "name": "brackethighlighter.square",
                    "scope": "brackethighlighter.square",
                    "settings": {
                        "foreground": "#66D9EF" // Cyan
                    }
                },
                {
                    "name": "brackethighlighter.angle",
                    "scope": "brackethighlighter.angle",
                    "settings": {
                        "foreground": "#F92672" // Pink
                    }
                },
                {
                    "name": "brackethighlighter.quote",
                    "scope": "brackethighlighter.quote",
                    "settings": {
                        "foreground": "#75715E" // Gray
                    }
                },
                {
                    "name": "brackethighlighter.unmatched",
                    "scope": "brackethighlighter.unmatched",
                    "settings": {
                        "foreground": "#F44747" // Red
                    }
                },
                {
                    "name": "CSS property name",
                    "scope": [
                        "support.type.property-name.css",
                        "support.type.property-name.scss",
                        "support.type.property-name.less"
                    ],
                    "settings": {
                        "foreground": "#FD971F" // Orange
                    }
                },
                {
                    "name": "HTML attribute name",
                    "scope": "entity.other.attribute-name.html",
                    "settings": {
                        "foreground": "#A6E22E" // Green
                    }
                },
                {
                    "name": "Invalid illegal",
                    "scope": "invalid.illegal",
                    "settings": {
                        "foreground": "#F44747", // Red
                        "background": "#1E0010"
                    }
                },
                {
                    "name": "JSON keys",
                    "scope": [
                        "support.type.property-name.json.comments",
                        "punctuation.support.type.property-name"
                    ],
                    "settings": {
                        "foreground": "#66D9EF"
                    }
                },
                {
                    "name": "Invalid deprecated",
                    "scope": "invalid.deprecated",
                    "settings": {
                        "foreground": "#F44747", // Red
                        "background": "#1E0010"
                    }
                }
            ]
        }
    },
    // Semantic Token Color Customizations
    "editor.semanticTokenColorCustomizations": {
        "[One Dark Pro Flat]": {
            "enabled": true,
            "rules": {
                "variable": "#F8F8F2", // White
                "keyword": "#F92672", // Pink
                "class": "#A6E22E", // Green
                "function": "#A6E22E", // Green
                "string": "#E6DB74", // Yellow
                "comment": "#75715E", // Gray
                "parameter": "#FD971F", // Orange
                "number": "#AE81FF", // Purple
                "type": "#66D9EF" // Cyan
            }
        }
    }
}